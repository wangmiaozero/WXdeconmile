.home-contrainer {
    padding-top: 10rpx;
    padding-bottom: 38rpx;
    text-align: center;
    background-color: #ffffff;
    height: 100%;
    overflow-y: scroll;
}

.add-bg {
    width: 520rpx;
    height: 520rpx;
}

.text-center {
    margin-top: 20rpx;
    color: #666;
    font-size: 26rpx;
}

.text-center .h1 {
    font-size: 56rpx;
    font-weight: 800;
    color: #333;
}

.desc {
    font-size: 30rpx;
    color: #666666;
    padding: 0 53rpx;
    margin-top: 50rpx;
    font-family: PingFangSC-Regular;
}

.footer {
    width: 100%;
    padding-left: 53rpx;
    padding-right: 53rpx;
    margin-top: 50rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.keep-login-class {
    width: 100%;
    height: 100%;
    color: blue;
    z-index: 10000;
    opacity: .9;
    background: #fff;
}

.btn {
    width: 310rpx;
}

.blank {
    background-color: #ffffff;
    color: #24C789;
    box-sizing: border-box;
    border: solid #24C789 1px;
}

.bottom {
    margin-top: 86rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    text-align: center;
}

checkbox .wx-checkbox-input {
    width: 30rpx;
    height: 30rpx;
    border-radius: 3rpx;
}

.moreBtn {
    width: 566rpx;
    height: 100rpx;
    background: #24C789;
    border-radius: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    font-family: PingFangSC-Regular;
    margin-top: 32rpx;
}

.shareBtn {
    width: 566rpx;
    height: 100rpx;
    background: #fff;
    border: 1rpx solid #24C789;
    border-radius: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #24C789;
    font-family: PingFangSC-Regular;
    margin-top: 28rpx;
}

button[disabled] {
    opacity: 0.4;
    color: #fff!important;
    background: #24C789!important;
}

.btnbox {
    position: relative;
}

.shouquan {
    position: absolute;
    top: 0;
    z-index: 1;
    background: #24C789;
    width: 566rpx;
    height: 100rpx;
    border-radius: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    left: 92rpx;
    font-family: PingFangSC-Regular;
}

.check {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
    vertical-align: middle;
}