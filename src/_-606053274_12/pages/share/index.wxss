    padding-left: 20rpx;
}

.file-text {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #666666;
    text-align: center;
    line-height: 40rpx;
    margin-top: 122rpx;
}

.btn {
    width: 566rpx;
    height: 100rpx;
    background: #24C789;
    border-radius: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    font-family: PingFangSC-Regular;
    margin-top: 34rpx;
}

.bottom {
    margin-top: 48rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
