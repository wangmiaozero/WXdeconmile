.quiz-contrainer {
    padding-top: 90rpx;
    background-color: #ffffff;
    height: 100%;
    overflow-y: scroll;
}

.quiz-title {
    font-size: 40rpx;
    line-height: 56rpx;
    font-weight: 500;
    color: #333333;
    margin: 0 0 38rpx 190rpx;
}

.quiz-picker {
    margin: 0 0 68rpx 190rpx;
}

.picker-value {
    width: 120rpx;
    padding-bottom: 18rpx;
    font-size: 32rpx;
    line-height: 45rpx;
    min-height: 64rpx;
    color: #666;
    border-bottom: 1rpx solid rgba(51,51,51,0.2);
}

.next-btn {
    position: absolute;
    bottom: 54rpx;
    left: 92rpx;
    right: 92rpx;
}

button[disabled] {
    opacity: 0.4;
    color: #fff!important;
    background: #24C789!important;
}