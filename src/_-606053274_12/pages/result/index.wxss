.result-container {
    background-color: #fff;
    min-height: 100%;
    padding-top: 100rpx;
}

.close {
    margin-left: 40rpx;
    width: 50rpx;
    height: 50rpx;
}

.content {
    width: 528rpx;
    height: 766rpx;
    background-color: #efefef;
    margin: 0 auto;
    border-radius: 8rpx;
    overflow: hidden;
}

.prephoto {
    width: 100%;
    height: 100%;
}

.btn {
    margin-bottom: 25rpx;
}

.op-btns {
    width: 100%;
    padding-left: 53rpx;
    padding-right: 53rpx;
    margin-top: 120rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.btn {
    width: 310rpx;
}

.blank {
    background-color: #ffffff;
    color: #24C789;
    box-sizing: border-box;
    border: solid #24C789 1px;
}

.loading-box {
    width: 243rpx;
    height: 178rpx;
    background-color: rgba(0,0,0,0.72);
    box-shadow: 0 16rpx 32rpx 0 rgba(0,0,0,0.20);
    border-radius: 8rpx;
    position: fixed;
    left: 50%;
    top: 50%;
    margin-left: -121.5rpx;
    margin-top: -89rpx;
    color: #ffffff;
    font-size: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.loading-box image {
    width: 64rpx;
    height: 64rpx;
    margin-bottom: 8rpx;
}