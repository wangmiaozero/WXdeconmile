.report-box {
    background: #FAFAFA;
    height: 100%;
}

.report-header {
    width: 100%;
    height: 220rpx;
    background: #FAFAFA;
    padding: 45rpx 28rpx 50rpx 40rpx;
}

.head-left {
    display: inline-block;
    width: 50%;
}

.head-right {
    display: inline-block;
    text-align: right;
    width: 50%;
}

.head-right image {
    width: 48rpx;
    height: 48rpx;
    vertical-align: top;
    margin-top: 15rpx;
}

.left-top {
    height: 80rpx;
    font-family: SFProDisplay-Medium;
    font-size: 60rpx;
    line-height: 80rpx;
    letter-spacing: 0;
    font-weight: bold;
}

.left-bottom {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #666666;
    letter-spacing: 0;
}

.right-top {
    height: 80rpx;
    font-family: PingFangSC-Medium;
    line-height: 80rpx;
    font-size: 40rpx;
}

.right-bottom {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #666666;
    letter-spacing: 0;
}

.con {
    padding: 0 28rpx 28rpx 28rpx;
    background: #fff;
}

.head-title {
    padding: 40rpx 0;
    font-size: 34rpx;
    color: #333;
    font-family: PingFangSC-Medium;
}

.con-front {
    display: inline-block;
    width: 333rpx;
    height: 444rpx;
    margin-right: 28rpx;
    border-radius: 10rpx;
}

.con-side {
    display: inline-block;
    width: 333rpx;
    height: 444rpx;
    border-radius: 10rpx;
}

.check-data {
    margin-top: 24rpx;
    background: #fff;
    text-align: left;
}

.check-title {
    padding: 40rpx 28rpx 12rpx;
}

.title-name {
    font-size: 34rpx;
    color: #333;
    font-family: PingFangSC-Medium;
    display: inline-block;
}

.title-num {
    display: inline-block;
    font-size: 34rpx;
    font-family: PingFangSC-Medium;
    float: right;
    line-height: 40rpx;
    margin-right: 7rpx;
}

.title-last {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #666666;
    float: right;
    display: inlijne-block;
    line-height: 40rpx;
}

.moreBtn {
    width: 566rpx;
    height: 100rpx;
    background: #24C789;
    border-radius: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #fff;
    font-family: PingFangSC-Regular;
    margin-top: 20rpx;
}

.shareBtn {
    width: 566rpx;
    height: 100rpx;
    background: #fff;
    border: 1rpx solid #24C789;
    border-radius: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #24C789;
    font-family: PingFangSC-Regular;
    margin-top: 28rpx;
}

.bottom {
    margin-top: 48rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666666;
    text-align: center;
}

.bigImg image {
    width: 100%;
    height: 100%;
    background: #fff;
    position: fixed;
    top: 0;
}

.swiper-tab {
    z-index: 1;
    width: 100%;
    text-align: center;
    line-height: 88rpx;
    background-color: #ffffff;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 50%;
    color: #999;
    position: relative;
}

.swiper-on {
    color: #584f60;
}

.swiper-on::after {
    position: absolute;
    left: 50%;
    width: 32rpx;
    bottom: 0;
    height: 4rpx;
    background-color: #584f60;
    transform: translateX(-50%);
    content: '';
}

.swiper-box {
    display: block;
    height: 100%;
    box-sizing: border-box;
}

.swiper-2slide {
    padding-top: 88rpx;
}

.report-detail {
    height: 100%;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.paper-data {
    height: 100%;
    background-image: linear-gradient(-180deg,#2C748D 0%,#076F48 100%);
    padding: 1rpx 0 0;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.bg-loading-data {
    height: 100%;
    background: url('https://staticweb.gotokeep.com/litekeep/wxc96dc7ebd9bf61e8/1549078353071/loading_pic@3x.png') no-repeat fixed top 340rpx left;
    color: #ffffff;
    text-align: center;
    background-size: 100% auto;
}

.paper-title {
    margin: 40rpx 28rpx;
    font-size: 30rpx;
    line-height: 48rpx;
    font-weight: 500;
    color: #fff;
}

.paper-card {
    background: rgba(0,0,0,0.14);
    border-radius: 8rpx;
    padding: 48rpx 36rpx 48rpx;
    margin: 0 28rpx;
    position: relative;
}

.card-line {
    display: flex;
}

.card-item {
    flex: 1;
}

.card-bottom {
    margin-top: 68rpx;
}

.card-left {
    text-align: left;
}

.card-right {
    text-align: right;
}

.card-center {
    text-align: center;
}

.card-label {
    font-size: 24rpx;
    line-height: 33rpx;
    color: rgba(255,255,255,0.60);
    margin-bottom: 14rpx;
}

.card-value {
    font-size: 40rpx;
    line-height: 56rpx;
    color: #fff;
    font-weight: 500;
}

.recommend-btn {
    margin: 80rpx 92rpx 28rpx;
    background-color: #fff;
    color: #333;
}

.share-btn {
    margin: 0 92rpx;
    border: 2rpx solid #fff;
    background-color: transparent;
}

.swiper-holder {
    height: 48rpx;
    width: 100%;
}

.sync-btn {
    position: fixed;
    bottom: 300rpx;
    right: 0;
    background-color: rgba(255,255,255,0.80);
    box-shadow: 0 0 14px 0 rgba(0,0,0,0.20);
    color: #333;
    font-size: 28rpx;
    text-align: center;
    line-height: 68rpx;
    height: 68rpx;
    width: 218rpx;
    border-bottom-left-radius: 100rpx;
    border-top-left-radius: 100rpx;
    z-index: 1;
}

.paper-card .human-model {
    display: block;
    margin: 58rpx auto 0;
}

.paper-card .m-model {
    width: 238rpx;
    height: 576rpx;
}

.paper-card .f-model {
    width: 248rpx;
    height: 575rpx;
}

.paper-card .line-left {
    width: 237rpx;
    height: 483rpx;
    position: absolute;
    top: 111rpx;
    left: 40rpx;
}

.paper-card .line-right {
    width: 237rpx;
    height: 513rpx;
    position: absolute;
    top: 91rpx;
    right: 40rpx;
}

.body-left {
    position: absolute;
    top: 121rpx;
    left: 40rpx;
}

.body-right {
    position: absolute;
    top: 101rpx;
    right: 36rpx;
    text-align: right;
}

.body-part {
    font-size: 28rpx;
    line-height: 32rpx;
    font-weight: 500;
    color: #fff;
}

.body-value {
    font-size: 24rpx;
    line-height: 32rpx;
    font-weight: 500;
    color: rgba(255,255,255,0.8);
    margin-top: 6rpx;
}

.waist-wrapper {
    margin-top: 72rpx;
}

.left-thigh-wrapper {
    margin-top: 61rpx;
}

.left-crus-wrapper {
    margin-top: 140rpx;
}

.hips-wrapper {
    margin-top: 92rpx;
}

.right-thigh-wrapper {
    margin-top: 61rpx;
}

.right-crus-wrapper {
    margin-top: 150rpx;
}

.body-bg {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 230rpx;
    z-index: -1;
}

.body-btn {
    font-size: 28rpx;
    line-height: 40rpx;
    margin-top: 92rpx;
    text-align: center;
    color: #fff;
}

.null-alert {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 1000;
    transform: translate(-50%,-50%);
    padding: 32rpx 0;
    text-align: center;
    background: rgba(0,0,0,0.72);
    color: #fff;
    width: 243rpx;
    font-size: 30rpx;
    border-radius: 8rpx;
}

.null-shadow {
    position: fixed;
    top: 88rpx;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 1000;
}

.progress_box {
    position: relative;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 16rpx;
}

.progress_bg {
    position: absolute;
    width: 48px;
    height: 48px;
}

.progress_canvas {
    width: 48px;
    height: 48px;
}