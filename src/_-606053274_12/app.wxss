page {
    position: relative;
    background-color: #fafafa;
    height: 100%;
    font-size: 32rpx;
}

.container {
    padding: 10rpx 15rpx;
}

page,view,button,checkbox,form,input,label,picker,picker-view,slider,textarea,image,video,audio,map,camera,cover-image,cover-view {
    box-sizing: border-box;
}

cover-image,cover-image:hover {
    outline: none;
}

button::after {
    border: none;
}

.btn {
    border: none;
    background-color: #24C789;
    color: #fff;
    font-size: 36rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 100rpx;
}

.btn-ghost {
    background: none;
    color: #24C789;
    border: 1rpx solid #24C789;
}