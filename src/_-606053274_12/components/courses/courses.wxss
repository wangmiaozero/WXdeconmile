.course {
    width: 100%;
    height: 251rpx;
    min-height: 251rpx;
    background-color: #ccc;
    background-position: center;
    background-repeat: no-repeat;
    background-size: 100% auto;
    color: #fff;
    position: relative;
}

.course+.course {
    margin-top: 8rpx;
}

.course-content {
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
    padding: 17rpx 28rpx 26rpx;
}

.course-content>.course-txt {
    display: block;
}

.course-title {
    font-size: 48rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-weight: bold;
}

.course-pioneer {
    font-size: 20rpx;
    opacity: 0.7;
    line-height: 30rpx;
}

.course-desc {
    display: flex;
    font-size: 20rpx;
    font-weight: 200;
    position: absolute;
    bottom: 28rpx;
    left: 28rpx;
}

.course-view+.course-view {
    margin-left: 24rpx;
}

.course-view-text+.course-view-text {
    margin-left: 4rpx;
    font-weight: bold;
}

.course-view-text {
    font-weight: bold;
}

.course-desc .hi {
    font-size: 32rpx;
    font-weight: bold;
}

.loading-box {
    margin: 15rpx 0;
    text-align: center;
}

.no-data {
    min-height: 300rpx;
    line-height: 300rpx;
    text-align: center;
    color: #999;
    font-size: 20rpx;
}