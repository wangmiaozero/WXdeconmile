.pop {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 1000;
    transform: translate(-50%,-50%);
    padding: 48rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
}

.pop-wrap {
    width: 480rpx;
}

.pop .tip {
    margin-bottom: 32rpx;
    font-size: 32rpx;
    color: #333333;
    text-align: center;
}

.pop .desc {
    font-size: 28rpx;
    color: #666666;
    text-align: center;
}

.pop .desc-left {
    text-align: left;
}

.pop .confirm-btn {
    width: 480rpx;
    height: 100rpx;
    margin-top: 48rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    text-align: center;
    background: #24C789;
    border-radius: 100rpx;
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.70);
}

.pop .cancel-btn {
    font-size: 28rpx;
    color: #584f60;
    line-height: 40rpx;
    margin-top: 32rpx;
    text-align: center;
}