<view class="report">
    <view class="silk-head">
        <view class="head-left">
            <image src="{{itemData.picture}}"></image>
        </view>
        <view class="head-right">
            <text class="text-title">{{itemData.title}}</text>
            <text class="lib-title">{{itemData.likes}}人觉得有用</text>
        </view>
    </view>
    <view class="silk-con" wx:for="{{itemData.chapters}}" wx:for-index="idx" wx:key="idx">
        <view bindtap="showDetail" class="nav" data-share-Id="{{idx}}">
            <text class="nav-left">{{item.title}}</text>
            <text class="nav-right">{{item.likes}} 有用</text>
        </view>
    </view>
</view>
